{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c \"$HOME/.claude/matrix/bin/matrix-hooks session-start\"",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c \"$HOME/.claude/matrix/bin/matrix-hooks user-prompt-submit\"",
            "timeout": 60
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c \"$HOME/.claude/matrix/bin/matrix-hooks pre-tool-bash\"",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c \"$HOME/.claude/matrix/bin/matrix-hooks pre-tool-edit\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c \"$HOME/.claude/matrix/bin/matrix-hooks post-tool-bash\"",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c \"$HOME/.claude/matrix/bin/matrix-hooks stop-session\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
